// dado um array de numeros mostre em um alert somendo a soma dos numeros impares


const numerosGerais = [1,5,13,3,6,8,9,12,5,8,1,2];
let numerosImpares = 0

for (i = 0 ; i < numerosGerais.length ; i++ ){
    console.log('Valor do objeto atual: ' + '+ ' + numerosGerais[i])
    // se o resto da divisão for diferente de zero, significa que o numero é impar
    if (numerosGerais[i] % 2 != 0){
        // a váriavel de numero impar, vai receber um acrescimo com o valor atual de cada numero impar
        numerosImpares += numerosGerais[i];
        console.log(' ')
        console.log('Valor total da soma = ' + numerosImpares)
        console.log(' ')

    } else{
        // apenas teste para visualização
        console.log(' ')
        console.log('Não soma')
        console.log(' ')
    }
}

console.log('Valor final dos numeros impares somados:   ' + numerosImpares)